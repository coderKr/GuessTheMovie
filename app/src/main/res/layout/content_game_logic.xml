<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/view_game"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.games.kripa.guessthemovie.GameLogic"
    tools:showIn="@layout/activity_game_logic">

    <GridView
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:numColumns="9"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        tools:listitem="@android:layout/simple_list_item_1" >

    </GridView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
        android:id="@+id/B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp"
        android:height="50dp"
        android:textSize="40dp"
        android:hapticFeedbackEnabled="true"
        android:elegantTextHeight="false"/>
        <ImageView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/B"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:src="@drawable/strikethrough" />
    </RelativeLayout>

    <TextView
        android:id="@+id/O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="O"
        android:textSize="40dp"
        android:height="50dp"
        android:drawable="@drawable/strikethrough"
        android:layout_alignRight="@+id/B"/>
    <TextView
        android:id="@+id/L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="L"
        android:textSize="40dp"
        android:drawable="@drawable/strikethrough"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/L1"
        android:layout_toStartOf="@+id/L1" />
    <TextView
        android:id="@+id/L1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="L"
        android:textSize="40dp"
        android:drawable="@drawable/strikeanim"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Y"
        android:textSize="40dp"
        style="@style/diagonalStyle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/L1"
        android:layout_toEndOf="@+id/L1" />

    <TextView
        android:id="@+id/W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:textSize="40dp"
        android:layout_marginRight="5dp"
        style="@style/diagonalStyle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Y"
        android:layout_toEndOf="@+id/Y" />

    <TextView
        android:id="@+id/O1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="O"
        android:textSize="40dp"
        android:drawable="@drawable/strikethrough"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/W"
        android:layout_toEndOf="@+id/W" />

    <TextView
        android:id="@+id/O2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:textSize="40dp"
        style="@style/diagonalStyle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/O1"
        android:layout_toEndOf="@+id/O1" />

    <TextView
        android:id="@+id/D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textSize="40dp"
        style="@style/diagonalStyle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/O2"
        android:layout_toEndOf="@+id/O2" />
</LinearLayout>


    <TextView
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOVIE NAME"/>


</RelativeLayout>
